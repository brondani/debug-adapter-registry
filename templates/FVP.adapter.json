{
    "tasks": [{
        "label": "CMSIS Load+Run",
        "type": "shell",
        "command": "<%= model %>",
        "options": { "cwd": "${workspaceFolder}/<%= solution_folder %>" },
        "windows": {
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [ "/d", "/c" ]
                }
            }
        },
        "linux": {
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [ "-c" ]
                }
            }
        },
        "osx": {
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [ "-c" ]
                }
            }
        },
        "args": [
            "<% if (config) { %>",
            "-f", "<%= config %>\n",
            "<% } %>",
            "<% const files = symbol_files.map(s => s.file) %>",
            "<% for (const file of files) { %>",
            "-a", "<%= file %>\n",
            "<% } %>",
            "<% for (const arg of args) { %>",
            "<%= arg %>\n",
            "<% } %>"
        ],
        "problemMatcher": []
    }]
}
